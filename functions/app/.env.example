PORT=5050
AI_API_KEY=your_ai_api_key

# Google Play subscription verification settings
ANDROID_PACKAGE_NAME=com.yourcompany.budgetai

# Option 1: Path to the service account key file (relative to app directory)
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY_PATH=./config/google-play-service-account.json

# Option 2: Service account JSON as environment variable (recommended for production)
# GOOGLE_PLAY_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"..."}

# Message quota limits
# FREE_MESSAGES_PER_DAY=5
# PREMIUM_MESSAGES_PER_DAY=100 